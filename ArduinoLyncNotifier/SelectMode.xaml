        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Mode" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button Content="Real Lync monitor" Margin="10" Click="StartMonitor_Click" />
